<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Servelets.Intro.Homework</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  	<servlet>
	<!-- tell the server to create an object of our DatesServlet class -->
		<servlet-name>DatesServlet</servlet-name>
		<servlet-class>Task.DatesServlet</servlet-class>
	</servlet>
	
	<!-- tell the server the url of the DatesServlet object -->
	<servlet-mapping>
		<servlet-name>DatesServlet</servlet-name>
		<url-pattern>/dates</url-pattern>
	</servlet-mapping>
	  	<servlet>
	<!-- tell the server to create an object of our RandmosServlet class -->
		<servlet-name>RandmosServlet</servlet-name>
		<servlet-class>Task.RandomsServlet</servlet-class>
	</servlet>
	
	<!-- tell the server the url of the RandmosServlet object -->
	<servlet-mapping>
		<servlet-name>RandmosServlet</servlet-name>
		<url-pattern>/randoms</url-pattern>
	</servlet-mapping>
		  	<servlet>
	<!-- tell the server to create an object of our RectangleServlet class -->
		<servlet-name>RectangleServlet</servlet-name>
		<servlet-class>Task.RectangleServlet</servlet-class>
	</servlet>
	
	<!-- tell the server the url of the RandmosServlet object -->
	<servlet-mapping>
		<servlet-name>RectangleServlet</servlet-name>
		<url-pattern>/rectangle</url-pattern>
	</servlet-mapping>
</web-app>